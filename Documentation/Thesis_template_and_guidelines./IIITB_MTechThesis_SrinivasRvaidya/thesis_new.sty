\newcommand{\degreename}[1]{%
\ifthenelse{\equal{#1}{1}}{Master of Technology}{}%
\ifthenelse{\equal{#1}{2}}{Master of Science by Research}{}%
\ifthenelse{\equal{#1}{3}}{Doctor of Philosophy}{}%
}

\newcommand{\monthname}[1]{%
